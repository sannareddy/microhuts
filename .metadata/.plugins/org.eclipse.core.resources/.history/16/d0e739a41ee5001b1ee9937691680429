package in.codehut.paymentservice.controller;

import java.util.ArrayList;
import java.util.Date;
import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import in.codehut.paymentservice.PaymentService;

@RestController
@RequestMapping("/payments")
public class PaymentServiceController {
	
	@GetMapping("")
	@ResponseBody
	public List<PaymentService> getPaymentId() {
		List<PaymentService> paymentlist=new ArrayList<>();
		PaymentService paymentservice=new PaymentService(1089888,897615,new Date(),"inprogress");
		paymentlist.add(paymentservice);
		return paymentlist;
		
	}

}
